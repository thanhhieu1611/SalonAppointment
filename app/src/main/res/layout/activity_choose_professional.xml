<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChooseProfessional">

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/black"
        android:text="@string/logout"
        android:textSize="14sp"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toTopOf="@+id/txtTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:contentDescription="@string/imageContent"
        app:srcCompat="@drawable/serviceprovider" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="267dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:background="@drawable/simpleborder"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:autofillHints=""
            android:background="@color/black"
            android:fontFamily="@font/antquai"
            android:gravity="center|start"
            android:hint="@string/label"
            android:text="@string/chooseProfessional"
            android:textAlignment="center"
            android:textColor="@color/dark_white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLogout" />

        <Button
            android:id="@+id/service1Btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/professional"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:theme="@style/ButtonTheme"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/service2Btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/professional"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:theme="@style/ButtonTheme"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/service3Btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/professional"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:theme="@style/ButtonTheme"
            app:cornerRadius="5dp" />

    </LinearLayout>

</LinearLayout>